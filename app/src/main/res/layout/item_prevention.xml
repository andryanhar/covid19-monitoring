<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardMaxElevation="4dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon_prevention"
            android:layout_width="174dp"
            android:layout_height="156dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/text_title_prevention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:fontFamily="@font/open_sans_bold"
            android:textColor="@color/textBlack"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/icon_prevention"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Washing your hands" />

        <TextView
            android:id="@+id/text_description_prevention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="4"
            android:fontFamily="@font/open_sans_light"
            android:textColor="@color/textBlack"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/icon_prevention"
            app:layout_constraintTop_toBottomOf="@+id/text_title_prevention"
            tools:text="Regularly and throughly clean your\nhands with an alcohol - based hand rub\nor wash them with soap and water." />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>